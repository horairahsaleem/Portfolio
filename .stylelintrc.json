{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-scss"],

  "rules": {
    "function-calc-no-invalid": true,
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
}
